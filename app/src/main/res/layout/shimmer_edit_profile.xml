<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    tools:context=".EditProfile">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@color/shimmer_color"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:background="@color/shimmer_color"
        android:textSize="14sp"
        android:fontFamily="@font/mitr_regular"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="50dp"
        android:background="@color/shimmer_color"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/secondBlack"
            android:fontFamily="@font/mitr_regular"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mitr_regular"
            android:textColor="@color/redWarning"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:textColor="@color/thridBlack"
        android:fontFamily="@font/mitr_regular"
        android:textSize="14sp"
        android:background="@color/shimmer_color"
        android:paddingStart="20dp"
        />
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="50dp"
        android:background="@color/shimmer_color"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/secondBlack"
            android:fontFamily="@font/mitr_regular"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mitr_regular"
            android:textColor="@color/redWarning"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:textColor="@color/thridBlack"
        android:fontFamily="@font/mitr_regular"
        android:textSize="14sp"
        android:background="@color/shimmer_color"
        android:paddingStart="20dp"
        />
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="50dp"
        android:background="@color/shimmer_color"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/secondBlack"
            android:fontFamily="@font/mitr_regular"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mitr_regular"
            android:textColor="@color/redWarning"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:textColor="@color/thridBlack"
        android:fontFamily="@font/mitr_regular"
        android:textSize="14sp"
        android:background="@color/shimmer_color"
        android:paddingStart="20dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/shimmer_color"
        android:textColor="@color/white"
        android:fontFamily="@font/mitr_medium"
        android:layout_marginTop="30dp"/>

</LinearLayout>