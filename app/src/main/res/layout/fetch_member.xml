<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/imageMember"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/example_image"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/titleMember"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:autoSizeMaxTextSize="12sp"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:text="CARRY OUTER BROWN"
        android:textColor="@color/thridBlack"
        android:textSize="10sp"
        android:fontFamily="@font/mitr_medium"/>
    <TextView
        android:id="@+id/priceMember"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 249.000"
        android:fontFamily="@font/mitr_medium"
        android:textSize="8sp"
        android:textColor="@color/price"
        />
    <TextView
        android:id="@+id/diskonMember"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/diskon"
        android:fontFamily="@font/mitr_regular"
        android:textSize="8sp"
        android:textColor="#808495"/>
    <TextView
        android:id="@+id/totalMember"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Rp 249.000"
        android:fontFamily="@font/mitr_medium"
        android:textSize="10sp"
        android:textColor="@color/primary"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/removeItem"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/remove_item"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/black"
                />

            <LinearLayout
                android:layout_width="43dp"
                android:gravity="center"
                android:background="@drawable/bg_jumlah_barang"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_height="20dp">

                <TextView
                    android:id="@+id/jumlahMember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:fontFamily="@font/mitr_regular"
                    android:textColor="@color/thridBlack"
                    android:textSize="10sp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/addItem"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/add_item"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/black"
                />

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/detele_ic"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>

