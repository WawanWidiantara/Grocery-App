<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:theme="@style/Theme.MaterialComponents.Light"
    android:layout_marginBottom="15dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="20dp"

        android:background="#F4F6FA"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@color/shimmer_color"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:background="@color/shimmer_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mitr_medium"
                android:textColor="@color/thridBlack"
                android:textSize="14sp"
                />
            <TextView
                android:background="@color/shimmer_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mitr_light"
                android:textColor="#444444"
                android:textSize="12sp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:background="@color/shimmer_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mitr_medium"
                android:textSize="16sp"
                android:textColor="@color/price"
                />
            <TextView
                android:background="@color/shimmer_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mitr_regular"
                android:textSize="12sp"
                android:textColor="#808495"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/primary"
                android:theme="@style/AppTheme"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@color/shimmer_color"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mitr_regular"
                        android:textColor="@color/primary"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>



    </LinearLayout>
    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />


</com.google.android.material.card.MaterialCardView>