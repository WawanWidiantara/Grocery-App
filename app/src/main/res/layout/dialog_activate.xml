<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="@drawable/bg_pesanan"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp">
            <ImageView
                android:id="@+id/imagePesanan"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/example_image"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titlePesanan"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:text="CARRY OUTER BROWN"
                android:fontFamily="@font/mitr_medium"
                android:textSize="12sp"
                android:textColor="@color/thridBlack"/>

            <TextView
                android:id="@+id/keteranganPesanan"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Produk berhasil ditambahkan"
                android:fontFamily="@font/mitr_regular"
                android:textSize="8sp"
                android:textColor="#808495"/>

        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/btnPesanan"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Produk berhasil ditambahkan"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:background="@drawable/bg_liat_pesanan"/>


</LinearLayout>